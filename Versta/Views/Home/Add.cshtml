@model Order
@{
    string title = "Новый заказ";
    ViewData["Title"] = title;
}

<div class="mt-3 mb-2 body-form-add" >
    <div class="form-add" style="max-width: 1000px;">
        <form asp-controller="Home" asp-action="Add" method="post">
            <div class="mb-4">
                <h2>@title</h2>
                <hr class="my-2" />
            </div>
            <div class="d-flex flex-row justify-content-between">
                <div class="w-50">
                    <div class="mb-2 text-center">
                        <h4>Отправитель</h4>
                    </div>
                    <div class="px-4">
                        <div class="mb-4">
                            <label asp-for="SenderCity" class="form-label"></label>
                            <input asp-for="SenderCity" class="form-control form-control-lg border-dark" />
                            <span asp-validation-for="SenderCity" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="SenderAddress" class="form-label"></label>
                            <input asp-for="SenderAddress" class="form-control form-control-lg border-dark" />
                            <span asp-validation-for="SenderAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="w-50">
                    <div class="mb-2 text-center">
                        <h4>Получатель</h4>
                    </div>
                    <div class="px-4">
                        <div class="mb-4">
                            <label asp-for="RecipientCity" class="form-label"></label>
                            <input asp-for="RecipientCity" class="form-control form-control-lg border-dark" />
                            <span asp-validation-for="RecipientCity" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="RecipientAddress" class="form-label"></label>
                            <input asp-for="RecipientAddress" class="form-control form-control-lg border-dark" />
                            <span asp-validation-for="RecipientAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="my-4" />
            <div class="d-flex flex-row justify-content-between">
                <div class="w-50">
                    <div class="px-4">
                        <div class="mb-4">
                            <label asp-for="WeightInKg" name="weight" class="form-label"></label>
                            <input asp-for="WeightInKg" name="weight" class="form-control form-control-lg border-dark" type="number" min="0.001" step="0.001" />
                            <span asp-validation-for="WeightInKg" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="w-50">
                    <div class="px-4">
                        <div class="mb-4">
                            <label asp-for="DateOfReceiving" class="form-label"></label>
                            <input asp-for="DateOfReceiving" class="form-control form-control-lg border-dark" />
                            <span asp-validation-for="DateOfReceiving" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="my-4" />
            <input type="submit" value="Создать" class="btn btn-lg btn-success float-end btn-submit" style="width: 220px;" />
        </form>
    </div>
</div>

@section scripts {
    <script src="~/js/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/js/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
